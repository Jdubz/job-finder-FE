# ==============================================================================
# Job Finder Frontend - Environment Configuration Template
# ==============================================================================
# Copy this file to .env.development for local development
# Get Firebase config from: https://console.firebase.google.com/project/static-sites-257923/settings/general
# ==============================================================================

# ------------------------------------------------------------------------------
# Firebase SDK Configuration (Required)
# ------------------------------------------------------------------------------
# Get these values from Firebase Console > Project Settings > General > Your apps
# For local development, use the job-finder-dev app configuration

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=localhost
VITE_FIREBASE_PROJECT_ID=job-finder-dev
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=1:your_app_id_here:web:your_web_app_id

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
# For local development with Firebase emulators:
VITE_API_BASE_URL=http://localhost:5001/job-finder-dev/us-central1

# For staging/production: This is auto-configured by src/config/api.ts based on MODE
# Staging: https://us-central1-static-sites-257923.cloudfunctions.net
# Production: https://us-central1-static-sites-257923.cloudfunctions.net

# ------------------------------------------------------------------------------
# Firebase Emulator Configuration (Development Only)
# ------------------------------------------------------------------------------
# Set to true when running Firebase emulators locally
VITE_USE_EMULATORS=true
VITE_EMULATOR_HOST=localhost

# ------------------------------------------------------------------------------
# Firestore Database ID
# ------------------------------------------------------------------------------
# Development: (default)
# Staging: portfolio-staging
# Production: (default)
VITE_FIRESTORE_DATABASE_ID=(default)

# ------------------------------------------------------------------------------
# Build Metadata
# ------------------------------------------------------------------------------
VITE_ENVIRONMENT=development

# ------------------------------------------------------------------------------
# Analytics (Optional)
# ------------------------------------------------------------------------------
# Set to false in development to avoid polluting production analytics
VITE_ENABLE_ANALYTICS=false
