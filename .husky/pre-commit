#!/bin/sh
# Husky pre-commit hook - fail on ANY lint warnings or formatting issues

echo "ğŸ” Running pre-commit checks..."

# Check code formatting with Prettier
echo "ğŸ“ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Prettier formatting check failed!"
  echo "ğŸ’¡ Run 'npm run format' to fix formatting issues"
  exit 1
fi

# Run ESLint with zero tolerance for warnings
echo "ğŸ”¬ Running ESLint..."
npm run lint -- --max-warnings=0
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed!"
  echo "ğŸ’¡ Run 'npm run lint:fix' to auto-fix some issues"
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
